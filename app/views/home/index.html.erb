<div class="container grid-xl">
    <div class="card mb-5">
        <div class="columns">
            <div class="column col-7">
                <%= link_to image_tag("http://placehold.it/800x600", class: 'img-responsive'), class: 'slick-carousel' %>
            </div>
            <div class="column col-5">
                <h5 class="mt-5 mb-3">
                    Recent Articles
                </h5>
                <% 6.times do %>
                    <div class="py-3 border-top">
                        <%= link_to "Fuck donald Trump!", '#/', class: 'text-dark' %>
                        <p class="text-gray mb-0">
                            Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                        </p>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="border-bottom-lg border-top-lg py-5">
    <div class="container grid-xl">
            <div class="columns">
            <% 6.times do %>
                <div class="column col-2">  
                <%= link_to image_tag("http://placehold.it/500x500/000000/ffffff", class: 'img-responsive circle control-shadow') %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<%= content_for :page_scripts do %>
  <script>
        $('.slick-carousel').slick({
            slidesToShow: 1,
            slidesToScroll: 0,
            autoplay: true,
            autoplaySpeed: 2000,
        });
  </script>
<% end %>
